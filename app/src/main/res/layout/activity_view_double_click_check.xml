<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="24sp"
        tools:text="111" />

    <Button
        android:id="@+id/tvObjectUnCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="setOnClickListener 匿名内部类\n不防抖"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tvObjectCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="setOnClickListener \n 匿名内部类"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tvLambda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="setOnClickListener \n lambda"
            android:textAllCaps="false" />

    </LinearLayout>

    <Button
        android:id="@+id/tvClickByXml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:onClick="onClickByXml"
        android:text="xml onClick"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bvObjectInterface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="setOnClickListener 页面实现接口"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/imageTest"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/legal_bitmap"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_card" />

</LinearLayout>